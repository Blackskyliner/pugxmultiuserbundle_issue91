{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <p>Logged in as: <span id="username">{{ app.user }}</span></p>
        {% if is_granted('ROLE_ADMIN') %}
            <p><a href="{{ path('homepage', {'_switch_user': 'Blackskyliner'}) }}">Switch to User</a></p>
        {% endif %}
        {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
            <p><a href="{{ path('homepage', {'_switch_user': '_exit'}) }}">Exit Impersonate</a></p>
        {% endif %}
        <p><a href="{{ path('fos_user_security_logout') }}">Logout</a></p>
    {% else %}
        <p>Not logged in.</p>
        <p><a href="{{ path('fos_user_security_login') }}">Login</a></p>
    {% endif  %}
{% endblock %}
